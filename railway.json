{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile",
    "buildCommand": "echo 'Building CoinLink production image...'",
    "watchPatterns": [
      "backend/**",
      "Dockerfile",
      "backend/requirements-production.txt"
    ]
  },
  "deploy": {
    "startCommand": "python -m uvicorn backend.api.main_production:app --host 0.0.0.0 --port $PORT --workers 2 --log-level info",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 60,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "numReplicas": 1,
    "region": "us-west1",
    "cronSchedule": null,
    "environmentName": "production"
  },
  "environments": {
    "production": {
      "deploy": {
        "numReplicas": 2,
        "healthcheckTimeout": 60,
        "startCommand": "python -m uvicorn backend.api.main_production:app --host 0.0.0.0 --port $PORT --workers 4 --access-log --log-level info"
      }
    },
    "staging": {
      "deploy": {
        "numReplicas": 1,
        "healthcheckTimeout": 30,
        "startCommand": "python -m uvicorn backend.api.main_production:app --host 0.0.0.0 --port $PORT --workers 2 --log-level debug"
      }
    }
  },
  "services": {
    "backend": {
      "icon": "ðŸš€",
      "name": "CoinLink API",
      "root": "/",
      "source": "backend"
    }
  }
}