{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend && pip install -r requirements-production.txt"
  },
  "deploy": {
    "startCommand": "cd backend && python -m uvicorn api.main_production:app --host 0.0.0.0 --port $PORT",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "PORT": 8000,
      "PYTHONPATH": "/app/backend"
    }
  }
}