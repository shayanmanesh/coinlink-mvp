# CoinLink Production Environment Configuration
# Generated: 2025-08-16
# Deployment Target: www.coin.link (Railway)

# ===============================================
# CORE APPLICATION SETTINGS
# ===============================================
NODE_ENV=production
PYTHON_ENV=production
DEBUG=false
APP_NAME=coinlink-mvp
APP_URL=https://www.coin.link
API_URL=https://api.coin.link

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_METRICS=true
METRICS_PORT=9090

# Cache and Monitoring
CACHE_TTL=300
MONITOR_INTERVAL=30
BTC_SYMBOL=BTC-USD
ALERT_THRESHOLD_PERCENT=5.0

# Ollama Configuration (Fallback)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3:8b

# Coinbase Advanced API
COINBASE_API_KEY=${COINBASE_API_KEY}
COINBASE_API_SECRET=${COINBASE_API_SECRET}
COINBASE_KEY_JSON=${COINBASE_KEY_JSON}

# Redis Configuration (Production)
REDIS_URL=${REDIS_URL:-redis://default:password@redis.railway.internal:6379}

# Hugging Face (for sentiment analysis)
HF_TOKEN=${HF_TOKEN}

# External APIs
CoinGecko_API_key=${COINGECKO_API_KEY}
Reddit_API_SECRET=${REDDIT_API_SECRET}
Reddit_client_id=${REDDIT_CLIENT_ID}
newsapi_api_key=${NEWSAPI_API_KEY}
messari_api_key=${MESSARI_API_KEY}

# Bitcoin Keywords for Sentiment Analysis
BTC_KEYWORDS=bitcoin,btc,cryptocurrency,crypto,blockchain,satoshi,halving,mining,wallet,exchange

# Performance Tuning
ALERT_PIPELINE=rt
WS_SOURCE=advanced
PRICE_SIGMA_K=2.5
ALERT_DEDUP_WINDOW_SECONDS=120
VOL_SPIKE_MULTIPLIER=3.0
RESISTANCE_HYSTERESIS_PCT=0.005
SUPPORT_HYSTERESIS_PCT=0.005
ALERT_COOLDOWN_SECONDS=300
WS_HEARTBEAT_INTERVAL=30

# ===============================================
# SECURITY & AUTHENTICATION
# ===============================================
# JWT Configuration
JWT_SECRET=${JWT_SECRET}
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Settings
CORS_ORIGINS=https://www.coin.link,https://coin.link,https://coinlink.vercel.app
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Session Configuration
SESSION_SECRET=${SESSION_SECRET}
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# ===============================================
# OBSERVABILITY & ERROR TRACKING
# ===============================================
# Sentry for Error Tracking
SENTRY_DSN=${SENTRY_DSN}
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# New Relic APM
NEW_RELIC_LICENSE_KEY=${NEW_RELIC_LICENSE_KEY}
NEW_RELIC_APP_NAME=coinlink-mvp
NEW_RELIC_ENVIRONMENT=production

# ===============================================
# RATE LIMITING & PERFORMANCE
# ===============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Connection Pooling
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30

# ===============================================
# DEPLOYMENT & INFRASTRUCTURE
# ===============================================
# Railway Specific
RAILWAY_ENVIRONMENT=production
PORT=${PORT:-8000}

# Health Check Configuration
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=30

# Auto-scaling
MIN_REPLICAS=1
MAX_REPLICAS=3
TARGET_CPU_UTILIZATION=70

# ===============================================
# FEATURE FLAGS
# ===============================================
ENABLE_WEBSOCKET=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_TECHNICAL_ANALYSIS=true
ENABLE_NEWS_AGGREGATION=true
ENABLE_SOCIAL_MONITORING=true
ENABLE_ALERT_NOTIFICATIONS=true

# ===============================================
# NOTIFICATION WEBHOOKS (Optional)
# ===============================================
DISCORD_WEBHOOK_URL=${DISCORD_WEBHOOK_URL}
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}
TELEGRAM_BOT_TOKEN=${TELEGRAM_BOT_TOKEN}
TELEGRAM_CHAT_ID=${TELEGRAM_CHAT_ID}