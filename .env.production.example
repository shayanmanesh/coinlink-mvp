# CoinLink Production Environment Variables Template
# Copy to .env.production and fill in the actual values

# ========================================
# DATABASE CONFIGURATION (REQUIRED)
# ========================================
DATABASE_URL=postgresql+asyncpg://user:password@host:port/database
POSTGRES_PASSWORD=your_secure_postgres_password

# ========================================
# REDIS CONFIGURATION (REQUIRED)
# ========================================
REDIS_URL=redis://host:port/0

# ========================================
# SECURITY CONFIGURATION (REQUIRED)
# ========================================
JWT_SECRET_KEY=your_ultra_secure_jwt_secret_key_minimum_32_characters
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
PASSWORD_HASH_ROUNDS=14
SESSION_TIMEOUT_HOURS=12

# ========================================
# EXTERNAL API KEYS (OPTIONAL)
# ========================================
COINBASE_API_KEY=your_coinbase_api_key
COINBASE_API_SECRET=your_coinbase_api_secret
COINBASE_KEY_JSON={}
COINGECKO_API_KEY=your_coingecko_api_key
HF_TOKEN=your_huggingface_token
REDDIT_API_SECRET=your_reddit_api_secret
REDDIT_CLIENT_ID=your_reddit_client_id
NEWSAPI_API_KEY=your_newsapi_key
MESSARI_API_KEY=your_messari_api_key

# ========================================
# OBSERVABILITY (OPTIONAL)
# ========================================
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
LOG_LEVEL=INFO
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# ========================================
# APPLICATION CONFIGURATION
# ========================================
ENVIRONMENT=production
API_V1_STR=/api/v1
MAX_CONNECTIONS_COUNT=20
MIN_CONNECTIONS_COUNT=5

# ========================================
# RAILWAY/RENDER DEPLOYMENT
# ========================================
PORT=8000
RAILWAY_PROJECT_ID=your_railway_project_id
RENDER_SERVICE_ID=your_render_service_id

# ========================================
# GITHUB CONTAINER REGISTRY
# ========================================
GITHUB_SHA=latest
DOCKER_IMAGE_TAG=latest