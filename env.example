# CoinLink MVP Environment Configuration
# Copy this file to .env and fill in your actual API keys

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434

# Coinbase Advanced API (for Bitcoin price data)
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Hugging Face (for sentiment analysis)
HF_TOKEN=your_huggingface_token_here

# CoinGecko API (for additional market data)
CoinGecko_API_key=your_coingecko_api_key_here

# Reddit API (for social sentiment)
Reddit_API_SECRET=your_reddit_api_secret_here
Reddit_client_id=your_reddit_client_id_here

# News API (for Bitcoin news sentiment)
newsapi_api_key=your_newsapi_api_key_here

# Messari API (for Bitcoin fundamentals)
messari_api_key=your_messari_api_key_here

# Bitcoin Keywords for Sentiment Analysis
BTC_KEYWORDS=bitcoin,btc,cryptocurrency,crypto,blockchain,satoshi,halving,mining,wallet,exchange

# Application Settings
DEBUG=true
LOG_LEVEL=INFO
CACHE_TTL=300
MONITORING_INTERVAL=30

# Authentication
JWT_SECRET_KEY=your_secure_jwt_secret_key_here
